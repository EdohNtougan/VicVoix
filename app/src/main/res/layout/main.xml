<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VicVoix"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- EditText (grand carré) -->
    <EditText
        android:id="@+id/etText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="top|start"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Écris ton texte ici (max 5000 caractères)"
        android:background="@android:drawable/edit_text"
        android:maxLength="5000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Compteur -->
    <TextView
        android:id="@+id/tvCharCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 5000"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Voices Spinner -->
    <TextView
        android:id="@+id/labelVoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voix"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"/>

    <Spinner
        android:id="@+id/spinnerVoices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintStart_toEndOf="@id/labelVoices"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Styles Spinner -->
    <TextView
        android:id="@+id/labelStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style"
        app:layout_constraintTop_toBottomOf="@id/spinnerVoices"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinnerStyles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerVoices"
        app:layout_constraintStart_toEndOf="@id/labelStyles"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Rate -->
    <TextView
        android:id="@+id/labelRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitesse"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="375"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintStart_toEndOf="@id/labelRate"
        app:layout_constraintEnd_toStartOf="@id/tvRateValue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvRateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pitch -->
    <TextView
        android:id="@+id/labelPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hauteur"
        app:layout_constraintTop_toBottomOf="@id/seekRate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/seekPitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="40"
        app:layout_constraintTop_toBottomOf="@id/seekRate"
        app:layout_constraintStart_toEndOf="@id/labelPitch"
        app:layout_constraintEnd_toStartOf="@id/tvPitchValue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvPitchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=\"0.0\"
        app:layout_constraintTop_toBottomOf=\"@id/seekRate\"
        app:layout_constraintEnd_toEndOf=\"parent\"/>

    <!-- Load / Generate buttons -->
    <Button
        android:id=\"@+id/btnLoadVoices\"
        android:layout_width=\"0dp\"
        android:layout_height=\"wrap_content\"
        android:text=\"Charger les Voix Disponibles\"
        app:layout_constraintTop_toBottomOf=\"@id/seekPitch\"
        app:layout_constraintStart_toStartOf=\"parent\"
        app:layout_constraintEnd_toStartOf=\"@id/btnGenerate\"
        android:layout_marginTop=\"16dp\"
        android:layout_marginEnd=\"8dp\" />

    <Button
        android:id=\"@+id/btnGenerate\"
        android:layout_width=\"wrap_content\"
        android:layout_height=\"wrap_content\"
        android:text=\"Générer & Jouer Voix\"
        app:layout_constraintTop_toBottomOf=\"@id/seekPitch\"
        app:layout_constraintEnd_toEndOf=\"parent\"
        android:layout_marginTop=\"16dp\" />

    <!-- Play & Download icons -->
    <ImageButton
        android:id=\"@+id/btnPlay\"
        android:layout_width=\"56dp\"
        android:layout_height=\"56dp\"
        android:src=\"@drawable/ic_play\"
        android:contentDescription=\"Jouer\" 
        android:background=\"?attr/selectableItemBackgroundBorderless\"
        app:layout_constraintTop_toBottomOf=\"@id/btnGenerate\"
        app:layout_constraintStart_toStartOf=\"parent\"
        android:layout_marginTop=\"18dp\" />

    <ImageButton
        android:id=\"@+id/btnDownload\"
        android:layout_width=\"56dp\"
        android:layout_height=\"56dp\"
        android:src=\"@drawable/ic_download\"
        android:contentDescription=\"Télécharger\" 
        android:background=\"?attr/selectableItemBackgroundBorderless\"
        app:layout_constraintTop_toBottomOf=\"@id/btnGenerate\"
        app:layout_constraintEnd_toEndOf=\"parent\"
        android:layout_marginTop=\"18dp\" />

    <!-- Progress -->
    <ProgressBar
        android:id=\"@+id/progressBar\"
        android:layout_width=\"wrap_content\"
        android:layout_height=\"wrap_content\"
        android:visibility=\"gone\"
        app:layout_constraintTop_toBottomOf=\"@id/btnPlay\"
        app:layout_constraintStart_toStartOf=\"parent\"
        app:layout_constraintEnd_toEndOf=\"parent\"
        android:layout_marginTop=\"18dp\" />

</androidx.constraintlayout.widget.ConstraintLayout>
