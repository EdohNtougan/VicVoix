<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VicVoix"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/accent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- Text input -->
    <EditText
        android:id="@+id/etText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="top|start"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="Écris ton texte ici (max 5000 caractères)"
        android:background="@drawable/bg_edittext"
        android:textColor="@color/edit_text_color"
        android:textColorHint="#999999"
        android:padding="14dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Character counter -->
    <TextView
        android:id="@+id/tvCharCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 5000"
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/etText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Voices -->
    <TextView
        android:id="@+id/labelVoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voix"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/tvCharCounter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/spinnerVoices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCharCounter"
        app:layout_constraintStart_toEndOf="@id/labelVoices"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Styles -->
    <TextView
        android:id="@+id/labelStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Style"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/spinnerVoices"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spinnerStyles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerVoices"
        app:layout_constraintStart_toEndOf="@id/labelStyles"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Rate -->
    <TextView
        android:id="@+id/labelRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitesse"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/seekRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="375"
        android:progressTint="@color/accent"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintStart_toEndOf="@id/labelRate"
        app:layout_constraintEnd_toStartOf="@id/tvRateValue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvRateValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/spinnerStyles"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pitch -->
    <TextView
        android:id="@+id/labelPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hauteur"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/seekRate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <SeekBar
        android:id="@+id/seekPitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="40"
        android:progressTint="@color/accent"
        app:layout_constraintTop_toBottomOf="@id/seekRate"
        app:layout_constraintStart_toEndOf="@id/labelPitch"
        app:layout_constraintEnd_toStartOf="@id/tvPitchValue"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvPitchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/seekRate"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnLoadVoices"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_outline"
        android:text="Charger"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/seekPitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnGenerate"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_button_primary"
        android:text="Générer"
        android:textColor="@color/button_text"
        app:layout_constraintTop_toBottomOf="@id/seekPitch"
        app:layout_constraintStart_toEndOf="@id/btnLoadVoices"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp" />

    <!-- Play & Download -->
    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Lire"
        android:background="@android:color/transparent"
        android:tint="@color/accent_soft"
        app:layout_constraintTop_toBottomOf="@id/btnGenerate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDownload"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ImageButton
        android:id="@+id/btnDownload"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_download"
        android:contentDescription="Télécharger"
        android:background="@android:color/transparent"
        android:tint="@color/accent_soft"
        app:layout_constraintTop_toBottomOf="@id/btnGenerate"
        app:layout_constraintStart_toEndOf="@id/btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/accent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
